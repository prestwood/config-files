{
    "workbench.colorTheme": "Dracula",
    "editor.minimap.enabled": false,
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        },
        {
            "before": ["<C-l>"],
            "after": ["C-o", "<Del>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["g", "g"],
            "commands": [":w"]
        },
    ],
    "editor.fontSize": 14,
    "[rust]": {
        "editor.rulers": [100]
    }
}